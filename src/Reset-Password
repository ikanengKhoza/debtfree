  <div class="container">
    <h2>Redirecting to app...</h2>
    <div class="spinner"></div>
    <p>If you're not redirected automatically, please open the app manually.</p>
  </div>

  <script>
    // Get the full URL with hash parameters from Supabase
    const hashParams = window.location.hash.substring(1);
    
    // Your deep link scheme (replace with your actual scheme)
    const deepLink = `debtfreedisciple://reset-password?${hashParams}`;
    
    // Attempt to open the app
    window.location.href = deepLink;
    
    // Fallback after 2 seconds
    setTimeout(() => {
      document.querySelector('.container').innerHTML = 
        '<h2>Unable to open app</h2><p>Please open the Debt Free Disciple app manually to complete password reset.</p>';
    }, 2000);
  </script>
